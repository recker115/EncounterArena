<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="8dp"
        app:cardCornerRadius="5dp"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/pubg"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/trans_black"
                android:paddingBottom="8dp">

            <TextView
                    android:text="Battle Ground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTournyName"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    style="@style/title"
                    android:gravity="center"
                    android:textColor="#fff"
            />
            <TextView
                    android:text="12 jan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDateTime"
                    style="@style/normal"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:textColor="@color/generic_color"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTournyName"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
            <TextView
                    android:text="Win Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/normal"
                    android:textColor="#fff"
                    android:id="@+id/textView4" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvDateTime" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/textView5"/>
            <TextView
                    android:text="Per Kill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/normal"
                    android:textColor="#fff"
                    android:id="@+id/textView5" app:layout_constraintStart_toEndOf="@+id/textView4"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvDateTime" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/textView6"/>
            <TextView
                    android:text="Entry Fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/normal"
                    android:textColor="#fff"
                    android:id="@+id/textView6" app:layout_constraintStart_toEndOf="@+id/textView5"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvDateTime" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.5"/>
            <TextView
                    android:text="@string/rs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvWin"
                    style="@style/title"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/textView4"
                    app:layout_constraintEnd_toEndOf="@+id/textView4"/>
            <TextView
                    android:text="@string/rs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPerKill"
                    style="@style/title"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/textView5"
                    app:layout_constraintEnd_toEndOf="@+id/textView5"/>
            <TextView
                    android:text="@string/rs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvEntryFee"
                    style="@style/title"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    app:layout_constraintStart_toStartOf="@+id/textView6"
                    app:layout_constraintEnd_toEndOf="@+id/textView6"/>
            <TextView
                    android:text="Type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/normal"
                    android:textColor="#fff"
                    android:id="@+id/textView10" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvWin" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/textView11"/>
            <TextView
                    android:text="Version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/normal"
                    android:textColor="#fff"
                    android:id="@+id/textView11" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvPerKill"
                    app:layout_constraintStart_toEndOf="@+id/textView10" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/textView12"/>
            <TextView
                    android:text="Map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/normal"
                    android:textColor="#fff"
                    android:id="@+id/textView12" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvEntryFee" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintStart_toEndOf="@+id/textView11" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvType"
                    style="@style/normal"
                    android:textColor="#fff"
                    app:layout_constraintTop_toBottomOf="@+id/textView10"
                    app:layout_constraintStart_toStartOf="@+id/textView10"
                    app:layout_constraintEnd_toEndOf="@+id/textView10" android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
            />
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvVersion"
                    style="@style/normal"
                    android:textColor="#fff"
                    app:layout_constraintTop_toBottomOf="@+id/textView11"
                    app:layout_constraintStart_toStartOf="@+id/textView11"
                    app:layout_constraintEnd_toEndOf="@+id/textView11" android:layout_marginTop="8dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/normal"
                    android:textColor="#fff"
                    android:id="@+id/tvMap" app:layout_constraintStart_toStartOf="@+id/textView12"
                    app:layout_constraintEnd_toEndOf="@+id/textView12"
                    app:layout_constraintTop_toBottomOf="@+id/textView12" android:layout_marginTop="8dp"/>

            <ProgressBar
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvVersion"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progress="25"
                    android:id="@+id/pbPlayersFilled"
                    android:layout_marginBottom="8dp"
            />

            <TextView
                    android:id="@+id/tvPlayersFilled"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/pbPlayersFilled"
                    android:text="25/100"
                    style="@style/normal"
                    android:textColor="#fff"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
            />
            <Button
                    android:text="Add Room"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/btnAddRoom"
                    style="@style/button"
                    android:textSize="11sp"
                    android:padding="8dp"
                    android:textStyle="normal"
                    app:layout_constraintTop_toBottomOf="@+id/tvPlayersFilled" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"/>
            <ImageView
                    android:padding="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" app:srcCompat="@mipmap/youtube_link"
                    android:id="@+id/ivYouLink"
                    app:layout_constraintStart_toEndOf="@+id/ivYoutube"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvPlayersFilled"/>
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@mipmap/youtube"
                    android:id="@+id/ivYoutube"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/tvPlayersFilled" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/admin_ongoing"
                    android:id="@+id/ivAdminOngoing" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>